#section_header
  %h2
    = t('settings')
  %ul#settings_nav
    %li.hoverable{class: current_page?(edit_profile_path) && 'selected'}= link_to t('profile'), edit_profile_path
    %li.hoverable{class: current_page?(edit_user_path) && 'selected'}= link_to t('account'), edit_user_path
    %li.hoverable{class: current_page?(privacy_settings_path) && 'selected'}= link_to t('privacy'), privacy_settings_path
    %li.hoverable{class: current_page?(services_path) && 'selected'}= link_to t('_services'), services_path
